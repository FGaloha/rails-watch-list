<h1>My lists</h1>

<div class="cards">
  <% @lists.each do |list| %>
  <% if list.photo.attached? %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
      <h2><%= list.name %></h2>
      <h4><%= link_to "Details", list_path(list), id: "card-btn-blue", class: "btn btn-primary" %></h4>
    </div>
  <% else  %>
    <div class="card-category-default card-category" >
      <h2><%= list.name %></h2>
      <h4><%= link_to "Details", list_path(list), id: "card-btn-blue", class: "btn btn-primary" %></h4>
    </div>
  <% end %>
  <% end %>
</div>
