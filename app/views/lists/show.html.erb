<h1><%= @list.name %></h1>

<h3>
  <% @list.movies.each do |movie| %>
    <%= movie.title %>
    <% bookmark = Bookmark.find_by(movie: movie, list: @list) %>
    <%= link_to "Remove",
                    bookmark_path(bookmark),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
  <% end %>
</h3>

<%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-primary" %>
